/* Outermost div for the block, contains form and open/close button */
.search {
  position: relative;
  display: flex;
  flex-direction: row;
  /* align-items: center; */
  z-index: 3;
  padding: var(--academica-size-md-gap-component);

  .search-form-wrapper {
    display: flex;
    flex-direction: row;
    justify-content: center;
    /* align-items: center; */
  }

  form {
    display: flex;
    align-items: stretch;
  }

  .input,
  .button {
    block-size: var(--academica-size-nav-item);
  }

  .input {
    border-start-end-radius: 0;
    border-end-end-radius: 0;

    &:focus-visible {
      border-color: var(--academica-color-focus-indicator);
      outline-color: var(--academica-color-focus-indicator);
    }

    /*** prevent focus from firing on click ***/
    &:-webkit-focus-ring {
      border-color: transparent;
      outline: none;
      box-shadow: none;
    }
  }

  .button {
    /* border-start-start-radius: 0;
    border-end-start-radius: 0; */
    border: none;
  }


  /********* DESKTOP DISPLAY ONLY  *********/
  @media (min-width: 992px) {
    & {
      //justify-content: stretch;
      justify-content: flex-end;
      align-items: stretch;
      max-block-size: var(--academica-size-nav-item);
      margin-inline-start: auto;
      padding: 0;
    }

    .search-form-wrapper {
      display: flex;
      align-items: stretch;
    }
  }
}






