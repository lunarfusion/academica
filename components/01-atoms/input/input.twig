{% set type = type in ['search', 'text'] ? kind : 'search' %}
{% set type_class = kind ? 'input--%s'|format(kind) : '' %}
{% set modifier_class = '%s %s'|format(type_class, modifier_class|default('')) %}


<input
 class="input {{ modifier_class -}}"
 {{ attributes }}
 id="{{ input_id }}"
 label="{{ input_label }}"
 placeholder="{{ placeholder_text }}"/>
 {{ children }}
